<UserControl x:Class="ReferenceDataUploader.UploadSteps.DataDestination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ReferenceDataUploader="clr-namespace:ReferenceDataUploader" 
             x:Name="data_destination_control"
             xmlns:local="clr-namespace:ReferenceDataUploader.UploadSteps"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="610" MinHeight="400" MinWidth="610">

    <Grid Name="data_destination_grid">
        <ReferenceDataUploader:Navigation_Buttons x:Name="navigation_buttons" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10"/>
        <ListView x:Name="listView_Sheets" MaxHeight="250" Margin="12.667,46.333,0,40" HorizontalAlignment="Left" SelectionMode="Single" SelectionChanged="selected_worksheet_changed" Width="267">
            <ListView.View>
                <GridView x:Name="gridView_worksheets">
                    <GridViewColumn x:Name="gridViewColumn_worksheets" Header="Select a worksheet"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
